                <div class="tab">
                    <div class="edge"></div>
                    <div class="tabarea active">
                        <p>untitled</p>
                        <button></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="editor">
            <div class="linenums" id="lnbar">
                <p>0</p><p>1</p><p>2</p>
            </div>
            <div class="textarea">
                <form method="post" id="codeform">
                    <input id="modeselect" type="hidden" name="mode" >
