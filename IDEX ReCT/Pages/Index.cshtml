@page
@model IndexModel
@{
    ViewData["Title"] = "Cod";
}

<script>const { ipcRenderer } = require("electron");</script>
<script>var exports = {};</script>

<div class="filepopup" id="filepopup">
    <button id="newbtn" onclick="ipcRenderer.send('new-event', {code: document.getElementById('editArea').value});">New</button>
    <button id="newprojbtn">New Project</button>
    <button id="openbtn">Open</button>
    <button id="savebtn" onclick="ipcRenderer.send('save-event', {code: document.getElementById('editArea').value});">Save</button>
    <button id="saveasbtn" onclick="ipcRenderer.send('saveas-event', {code: document.getElementById('editArea').value});">Save As</button>
</div>

